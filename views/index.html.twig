<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <title>Midtown Public Library | Home</title>
    </head>
    <body>
        <div class="container-fluid">
            <div class="container main">
                <div class="row">
                    <h1>Welcome to Midtown Public Library! | Catalog</h1>
                    <div class="col-md-6">
                        <form id="search_by_title" action="/search_by_title" method="post">
                            <label for="book_title">Find A Book By Title: </label>
                            <input type="text" name="book_title">

                            <button type="submit" name="search_by_title">Go!</button>
                        </form>

                        <h2>Add A Book</h2>
                        <form action="/add_book" name="add_book" method="post">
                            <label for="title">Add A Book: </label>
                            <input type="title" name="title" type="text" required>

                            <button type="submit" name="button">Add Book</button>
                        </form>

                        <h2>View All Books</h2>
                        {% if all_books is not empty %}
                            {% for book in all_books %}
                                <p><a href="/edit_book/{{ book.getId }}">{{ book.getTitle }}</a></p>
                            {% endfor %}
                        {% endif %}
                    </div>

                    <div class="col-md-6">
                        <form id="search_by_author" action="/search_by_author" method="post">
                            <label for="book_author_name">Find A Book By Author: </label>
                            <input type="text" name="book_author_name">

                            <button type="submit" name="search_by_author">Go!</button>
                        </form>

                        <h2>Add An Author</h2>
                        <form action="/add_author" name="add_author" method="post">
                            <label for="author_name">Add An Author: </label>
                            <input type="author_name" name="author_name" type="text" required>

                            <button type="submit" name="button">Add Author</button>
                        </form>
                        <h2>View All Authors</h2>
                        {% if all_authors is not empty %}
                            {% for author in all_authors %}
                                <p><a href="/edit_author/{{ author.getId }}">{{ author.getAuthorName }}</a></p>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
