<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <title>Midtown Public Library | Patron</title>
    </head>
    <body>
        <div class="container-fluid">
            <div class="container main">
                <div class="row">
                    <h1>Midtown Public Library | {{ patron.getPatronName }}</h1>

                    <h2>Checkout A Book</h2>
                    <form action="/checkout_book/{{ patron.getId }}" name="checkout_book" method="post">
                        <label for="checkout_book">Checkout A Book: </label>
                        <select name="all_books">
                            {% for book in all_books %}
                                <option value="{{ book.getId }}">{{ book.getTitle }}</option>
                            {% endfor %}
                        </select>
                        <button type="submit" name="button">Checkout Book</button>
                    </form>

                    <h2>View All Checked-Out Books</h2>
                    {% if checked_out_books is not empty %}
                        {% for book in checked_out_books %}
                            <p><a href="/edit_book/{{ book.getId }}">{{ book.getTitle }}</a></p>
                        {% endfor %}
                    {% endif %}

                    <p><a href="/">Home</a></p>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
